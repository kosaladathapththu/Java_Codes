        <Label Content="Allowance" HorizontalAlignment="Left" Height="26" Margin="30,244,0,0" VerticalAlignment="Top" Width="112" FontWeight="Bold"/>
        <Label Content="EPF" HorizontalAlignment="Left" Height="26" Margin="30,287,0,0" VerticalAlignment="Top" Width="112" FontWeight="Bold"/>
        <Label Content="Net salary" HorizontalAlignment="Left" Height="26" Margin="31,329,0,0" VerticalAlignment="Top" Width="112" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="120,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Background="#FFF2F781"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="120,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Background="#FFF2F781"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="120,329,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Background="#FFF2F781"/>
        <Label Content="ETF" HorizontalAlignment="Left" Height="26" Margin="324,287,0,0" VerticalAlignment="Top" Width="112" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="414,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Background="#FFF2F781"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Height="41" Margin="532,342,0,0" VerticalAlignment="Top" Width="129" Click="Button_Click" Background="#FFD270B7"/>

    </Grid>
</Window>
